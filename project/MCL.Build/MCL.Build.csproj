<Project Sdk="Microsoft.NET.Sdk">

    <PropertyGroup>
        <TargetFramework>net8.0</TargetFramework>
        <RuntimeIdentifier>win-x64</RuntimeIdentifier>
    </PropertyGroup>
    <PropertyGroup>
        <AllowUnsafeBlocks>true</AllowUnsafeBlocks>
        <Nullable>enable</Nullable>
    </PropertyGroup>
    <ItemGroup>
        <ProjectReference Include="..\MCL.Core\MCL.Core.csproj" />
        <ProjectReference Include="..\MCL.Launcher\MCL.Launcher.csproj" />
        <ProjectReference Include="..\MCL.Launcher\MCL.SimpleMLauncher.csproj" />
        <ProjectReference Include="..\MCL.Launcher\MCL.SimplePaperLauncher.csproj" />
        <ProjectReference Include="..\MCL.CodeAnalyzers\MCL.CodeAnalyzers.csproj" />
    </ItemGroup>
    <Target Name="PostBuild" AfterTargets="PostBuildEvent" Condition="'$(BuildingInsideVisualStudio)' == 'true'">
		<Exec Command="dotnet cake &quot;../build.cake&quot; --config=&quot;$(ConfigurationName)&quot; --vsbuilt=true" />
	</Target>
    <Target Name="PostBuild" AfterTargets="PostBuildEvent" Condition="'$(BuildingByReSharper)' == 'true'">
        <Exec Command="dotnet cake &quot;../build.cake&quot; --config=&quot;$(ConfigurationName)&quot; --vsbuilt=true" />
    </Target>

</Project>